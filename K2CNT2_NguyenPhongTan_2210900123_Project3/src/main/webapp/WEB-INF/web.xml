<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <display-name>Motorbike Management</display-name>

    <!-- Bộ lọc UTF-8 -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Khai báo Servlet -->
    <servlet>
    <servlet-name>AddVehicleServlet</servlet-name>
    <servlet-class>controllers.AddVehicleServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AddVehicleServlet</servlet-name>
    <url-pattern>/</url-pattern>
</servlet-mapping>
    <servlet>
        <servlet-name>MotorbikeServlet</servlet-name>
        <servlet-class>controllers.MotorbikeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MotorbikeServlet</servlet-name>
        <url-pattern>/motorbikes</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
